    function parseChatGPTString(input) {
      if (!input) return [];
      // Match /Medicine/ [Strength] (Frequency) <Duration>
      const regex = /\/([^\/]+)\/\s*\[([^\]]+)\]\s*\(([^)]+)\)\s*<([^>]+)>/g;
      let match;
      const results = [];

      while ((match = regex.exec(input)) !== null) {
        results.push({
          name: match[1].trim(),
          strength: match[2].trim(),
          frequency: match[3].trim(),
          duration: match[4].trim(),
        });
      }

      return results;
    }

